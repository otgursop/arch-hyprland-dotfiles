[options]
background = checks
fullscreen = false
initial_pan = 50 50

overlay = true
overlay_font = JetBrainsMono Nerd Font:14
overlay_text = $(echo "${imv_current_file##*/} (${imv_current_index}/${imv_file_count}) ${imv_width}x${imv_height}")
overlay_text_color = ffffff
overlay_text_alpha = ff
overlay_background_color = 000000
overlay_background_alpha = 90
overlay_position_bottom = true

recursively = true

suppress_default_binds = false

title_text = $(echo "imv: ${imv_current_file##*/} (${imv_current_index}/${imv_file_count})")

[binds]
q = quit

f = fullscreen

z = scaling full

n = next
p = prev

o = overlay

# Reset to defaults
Escape = reset

[aliases]
x = close
